@{
  Layout = "_Layout";
}

<h2>Index Stuff Goes Here</h2>
@if (@Model.Count > 0)
{
    <ol>
        @foreach (var category in Model)
        {
          <h4><a href="/categories/@category.GetId()">@category.GetDescription()</a></h4>
        }
    </ol>
}
else
{
  <h3>The list is empty.</h3>
}
<h4><a href="/categories/new">Add new category</a></h4>
<h4><a href="/items/new">Add new item</a></h4>
