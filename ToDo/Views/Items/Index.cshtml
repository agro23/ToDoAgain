  Layout = "_Layout";
}
@if ( (Model.Count != 0) && (Model != null))
{
  <ul>
    @foreach (var item in Model)
    {
      <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
    }
  </ul>
}
